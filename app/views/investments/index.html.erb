<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 sm:py-6">
  <div class="text-center mb-6 sm:mb-8">
    <h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-2">REIT Investment Tracker</h1>
    <p class="text-base sm:text-lg text-gray-600">Road to $230k</p>
    <div class="mt-3 sm:mt-4">
      <%= link_to "Logout", logout_path, method: :delete, 
          class: "inline-flex items-center px-3 py-1.5 border border-gray-300 text-xs sm:text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition duration-150 ease-in-out" %>
    </div>
  </div>
  
  <!-- Summary Cards -->
  <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-3 sm:gap-4 mb-6 sm:mb-8">
    <div class="bg-gradient-to-br from-green-50 to-green-100 p-3 sm:p-4 lg:p-5 rounded-lg border border-green-200 hover:shadow-lg hover:border-green-300 transition-all duration-200 transform hover:scale-[1.02]">
      <h3 class="text-xs sm:text-sm font-medium text-green-700 mb-1 truncate">Current Balance</h3>
      <p class="text-lg sm:text-xl lg:text-2xl font-bold text-green-800">$<%= number_with_delimiter(sprintf('%.2f', @summary[:current_balance])) %></p>
    </div>
    
    <div class="bg-gradient-to-br from-green-50 to-green-100 p-3 sm:p-4 lg:p-5 rounded-lg border border-green-200 hover:shadow-lg hover:border-green-300 transition-all duration-200 transform hover:scale-[1.02]">
      <h3 class="text-xs sm:text-sm font-medium text-green-700 mb-1 truncate">Remaining to Goal</h3>
      <p class="text-lg sm:text-xl lg:text-2xl font-bold text-green-800">$<%= number_with_delimiter(sprintf('%.2f', @summary[:remaining])) %></p>
    </div>
    
    <div class="bg-gradient-to-br from-green-50 to-green-100 p-3 sm:p-4 lg:p-5 rounded-lg border border-green-200 hover:shadow-lg hover:border-green-300 transition-all duration-200 transform hover:scale-[1.02]">
      <h3 class="text-xs sm:text-sm font-medium text-green-700 mb-1 truncate">Progress</h3>
      <p class="text-lg sm:text-xl lg:text-2xl font-bold text-green-800"><%= sprintf('%.2f', @summary[:progress]) %>%</p>
      <div class="mt-2 w-full bg-green-200 rounded-full h-2">
        <div class="bg-green-600 h-2 rounded-full transition-all duration-500" style="width: <%= [@summary[:progress], 100].min %>%"></div>
      </div>
    </div>
    
    <div class="bg-gradient-to-br from-green-50 to-green-100 p-3 sm:p-4 lg:p-5 rounded-lg border border-green-200 hover:shadow-lg hover:border-green-300 transition-all duration-200 transform hover:scale-[1.02]">
      <h3 class="text-xs sm:text-sm font-medium text-green-700 mb-1 truncate">Monthly Dividend</h3>
      <p class="text-lg sm:text-xl lg:text-2xl font-bold text-green-800">$<%= number_with_delimiter(sprintf('%.2f', @summary[:monthly_dividend])) %></p>
    </div>
    
    <div class="bg-gradient-to-br from-green-50 to-green-100 p-3 sm:p-4 lg:p-5 rounded-lg border border-green-200 hover:shadow-lg hover:border-green-300 transition-all duration-200 transform hover:scale-[1.02]">
      <h3 class="text-xs sm:text-sm font-medium text-green-700 mb-1 truncate">Months to $2k</h3>
      <p class="text-lg sm:text-xl lg:text-2xl font-bold text-green-800 mb-1 sm:mb-2"><%= @summary[:months_to_target] %></p>
      <%= form_with url: update_contribution_path, local: true, class: "mt-1 sm:mt-2" do |f| %>
        <%= f.number_field :amount, value: @summary[:monthly_contribution], 
            class: "w-full px-2 py-1.5 sm:py-2 border border-green-300 rounded-md text-center text-xs sm:text-sm bg-white focus:ring-2 focus:ring-green-500 focus:border-green-500 transition duration-150",
            placeholder: "$/month" %>
      <% end %>
    </div>
    
    <div class="bg-gradient-to-br from-green-50 to-green-100 p-3 sm:p-4 lg:p-5 rounded-lg border border-green-200 hover:shadow-lg hover:border-green-300 transition-all duration-200 transform hover:scale-[1.02]">
      <h3 class="text-xs sm:text-sm font-medium text-green-700 mb-1 truncate">Years to $2k</h3>
      <p class="text-lg sm:text-xl lg:text-2xl font-bold text-green-800"><%= @summary[:years_to_target] %></p>
    </div>
  </div>
  
  <!-- Investment Table -->
  <div class="bg-white rounded-lg shadow-lg overflow-hidden border border-gray-200">
    <!-- Mobile View -->
    <div class="block lg:hidden">
      <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
        <h2 class="text-sm font-semibold text-gray-700">Investment History</h2>
      </div>
      <div class="divide-y divide-gray-200">
        <% @investments.each_with_index do |inv, index| %>
          <div class="p-4 <%= 'bg-blue-50' if inv.month > 0 && inv.month % 3 == 0 %>">
            <div class="flex justify-between items-start mb-2">
              <div>
                <span class="font-semibold text-gray-900">Month <%= inv.month %></span>
                <p class="text-xs text-gray-500"><%= inv.date %></p>
              </div>
              <span class="text-sm font-bold text-green-600">$<%= number_with_delimiter(sprintf('%.2f', inv.balance)) %></span>
            </div>
            
            <% if inv.month > 0 %>
              <%= form_with model: inv, local: true, class: "space-y-2" do |f| %>
                <div class="grid grid-cols-2 gap-2">
                  <div>
                    <label class="text-xs text-gray-600">Actual</label>
                    <%= f.number_field :actual, step: 0.01, value: inv.actual,
                        class: "w-full px-2 py-1.5 border border-gray-300 rounded-md text-sm focus:ring-2 focus:ring-green-500 focus:border-green-500",
                        onchange: "this.form.submit()" %>
                  </div>
                  <div>
                    <label class="text-xs text-gray-600">Dividend</label>
                    <%= f.number_field :dividend, step: 0.01, value: inv.dividend,
                        class: "w-full px-2 py-1.5 border border-gray-300 rounded-md text-sm focus:ring-2 focus:ring-green-500 focus:border-green-500",
                        onchange: "this.form.submit()" %>
                  </div>
                </div>
              <% end %>
            <% end %>
            
            <div class="grid grid-cols-2 gap-2 mt-2 text-xs">
              <div>
                <span class="text-gray-600">Total Invested:</span>
                <span class="font-medium">$<%= number_with_delimiter(sprintf('%.2f', inv.total_invested)) %></span>
              </div>
              <div>
                <span class="text-gray-600">Monthly Div:</span>
                <span class="font-medium text-green-600">$<%= number_with_delimiter(sprintf('%.2f', inv.monthly_dividend)) %></span>
              </div>
            </div>
            
            <% if inv.month > 0 %>
              <%= form_with model: inv, local: true, class: "mt-2" do |f| %>
                <%= f.text_field :notes, value: inv.notes,
                    class: "w-full px-2 py-1.5 border border-gray-300 rounded-md text-sm focus:ring-2 focus:ring-green-500 focus:border-green-500",
                    onchange: "this.form.submit()",
                    placeholder: "Add notes..." %>
              <% end %>
            <% elsif inv.notes.present? %>
              <p class="text-xs text-gray-600 mt-2"><%= inv.notes %></p>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    
    <!-- Desktop View -->
    <div class="hidden lg:block overflow-x-auto">
      <table class="w-full">
        <thead>
          <tr class="bg-gradient-to-r from-gray-50 to-gray-100 border-b-2 border-gray-200">
            <th class="px-3 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider sticky left-0 bg-gradient-to-r from-gray-50 to-gray-100">Month</th>
            <th class="px-3 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Date</th>
            <th class="px-3 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Target</th>
            <th class="px-3 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Actual</th>
            <th class="px-3 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Dividend</th>
            <th class="px-3 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Total Invested</th>
            <th class="px-3 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Balance</th>
            <th class="px-3 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Monthly Div</th>
            <th class="px-3 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Remaining</th>
            <th class="px-3 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Notes</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @investments.each_with_index do |inv, index| %>
            <% row_class = "hover:bg-gray-50 transition-colors duration-150" %>
            <% row_class += " bg-blue-50 hover:bg-blue-100" if inv.month > 0 && inv.month % 3 == 0 %>
            <tr class="<%= row_class %>">
              <td class="px-3 py-4 whitespace-nowrap text-sm font-semibold text-gray-900 sticky left-0 <%= inv.month > 0 && inv.month % 3 == 0 ? 'bg-blue-50' : 'bg-white' %>"><%= inv.month %></td>
              <td class="px-3 py-4 whitespace-nowrap text-sm text-gray-700"><%= inv.date %></td>
              <td class="px-3 py-4 whitespace-nowrap text-sm text-gray-700">
                <% if inv.month == 0 %>
                  <span class="text-gray-400">-</span>
                <% else %>
                  $<%= number_with_delimiter(sprintf('%.2f', inv.target)) %>
                <% end %>
              </td>
              
              <% if inv.month > 0 %>
                <%= form_with model: inv, local: true, html: { style: "display: contents;" } do |f| %>
                  <td class="px-3 py-3 whitespace-nowrap">
                    <%= f.number_field :actual, step: 0.01, 
                        value: inv.actual,
                        class: "w-24 px-2 py-1.5 border border-gray-300 rounded-md text-sm focus:ring-2 focus:ring-green-500 focus:border-green-500 hover:border-gray-400 transition-colors duration-150",
                        onchange: "this.form.submit()" %>
                  </td>
                  <td class="px-3 py-3 whitespace-nowrap">
                    <%= f.number_field :dividend, step: 0.01,
                        value: inv.dividend,
                        class: "w-24 px-2 py-1.5 border border-gray-300 rounded-md text-sm focus:ring-2 focus:ring-green-500 focus:border-green-500 hover:border-gray-400 transition-colors duration-150",
                        onchange: "this.form.submit()" %>
                  </td>
                <% end %>
              <% else %>
                <td class="px-3 py-4 whitespace-nowrap text-sm text-gray-400">-</td>
                <td class="px-3 py-4 whitespace-nowrap text-sm text-gray-400">-</td>
              <% end %>
              
              <td class="px-3 py-4 whitespace-nowrap text-sm font-medium text-gray-900">$<%= number_with_delimiter(sprintf('%.2f', inv.total_invested)) %></td>
              <td class="px-3 py-4 whitespace-nowrap text-sm font-medium text-green-600">$<%= number_with_delimiter(sprintf('%.2f', inv.balance)) %></td>
              <td class="px-3 py-4 whitespace-nowrap text-sm text-green-600">$<%= number_with_delimiter(sprintf('%.2f', inv.monthly_dividend)) %></td>
              <td class="px-3 py-4 whitespace-nowrap text-sm text-gray-700">$<%= number_with_delimiter(sprintf('%.2f', inv.remaining)) %></td>
              
              <% if inv.month > 0 %>
                <%= form_with model: inv, local: true, html: { style: "display: contents;" } do |f| %>
                  <td class="px-3 py-3">
                    <%= f.text_field :notes, 
                        value: inv.notes,
                        class: "w-32 px-2 py-1.5 border border-gray-300 rounded-md text-sm focus:ring-2 focus:ring-green-500 focus:border-green-500 hover:border-gray-400 transition-colors duration-150",
                        onchange: "this.form.submit()",
                        placeholder: "Add notes..." %>
                  </td>
                <% end %>
              <% else %>
                <td class="px-3 py-4 whitespace-nowrap text-sm text-gray-700"><%= inv.notes %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>